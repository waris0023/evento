<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBar.Solid.Evento</item>
        <item name="android:statusBarColor">@color/StatusBlueEvento</item>
    </style>
    <style name="ActionBar.Solid.Evento" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/EventoBlue</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Evento.NoTitle</item>
    </style>
    <style name="ActionBar.Solid.Evento.NoTitle" parent="ActionBar.Solid.Evento">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@mipmap/ic_logo</item>
    </style>
    <style name="RestTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Evento.REST</item>
    </style>
    <style name="ActionBar.Solid.Evento.REST" parent="ActionBar.Solid.Evento">
        <item name="displayOptions">useLogo|showTitle</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>
    <style name="spinner_style" >
    <item name="android:background">@drawable/spinner_bg</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="edit_style">
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>


</resources>