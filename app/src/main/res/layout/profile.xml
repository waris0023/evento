<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:id="@+id/lalayout">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:src="@mipmap/catereres"
    android:scaleType="centerCrop"
    android:id="@+id/imag"/>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="3.5/5"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:id="@+id/txt1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:text="123"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:id="@+id/txt2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="15"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:id="@+id/txt3"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="Rating"
            android:textSize="12sp"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Review"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="Photos"
            android:textSize="12sp"
            android:gravity="center_horizontal" />


    </LinearLayout>
</LinearLayout>
</FrameLayout>



    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/card"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="8dp"
        card_view:cardPreventCornerOverlap="false"
        android:background="#ffffff"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:textColor="@color/StatusBlueEvento"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aadar Satkar proudly offers catering services for your personal or business needs. Our catering services range from the most elegant affair to a business luncheon or a picnic at the park. We will meet your event needs by exploring options and ideas with you. You will find Aadar Satkar catering staff to be professional, pleasant and quick to meet your needs."
            android:textSize="12sp"
            android:id="@+id/txt4"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/card1"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="8dp"
        card_view:cardPreventCornerOverlap="false"
        android:background="#ffffff"
        card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: 42/60 Shanti nagar,Delhi
                           Tele: +91-9952599004"
            android:paddingLeft="8dp"
            android:layout_weight="1"/>
  <ImageButton
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:src="@mipmap/ic_call"
      android:scaleType="centerCrop"
      android:id="@+id/call"
      android:background="#ffffff" />
    </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
